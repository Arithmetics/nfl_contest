<!-- Status Readers-->
<div class="col-md-8 col-sm-12">
  <div class="row status-board">

    <div class="col-md-4 col-sm-12">
      <li class="list-group-item">
        Points Scored/Leader: <span class="badge">
          <%= current_user.score %> / <%= User.top_score %>
        </span>
      </li>
    </div>
    <div class="col-md-4 col-sm-12">
      <li class="list-group-item">
        Unpicked Games: <span class="badge">
          <%= current_user.unpicked_games %>
        </span>
      </li>
    </div>
    <div class="col-md-4 col-sm-12">
      <li class="list-group-item">
        Locks Remaining: <span class="badge">
          <%= current_user.lock_points %>
        </span>
      </li>
    </div>
  </div>
</div>
